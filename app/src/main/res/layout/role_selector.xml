<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:textFontWeight="400"
            android:text="@string/chose_your_role"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/select_driver_role"
                android:layout_width="wrap_content"
                android:background="@drawable/button_background"
                android:text="@string/driver"
                android:paddingHorizontal="20dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/select_loader_role"
                android:layout_width="wrap_content"
                android:background="@drawable/button_background"
                android:text="@string/loader"
                android:paddingHorizontal="20dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textFontWeight="400"
            android:text="@string/test_modes"/>
        <Button
            android:id="@+id/select_driver_mode"
            android:layout_width="wrap_content"
            android:background="@drawable/button_background"
            android:text="@string/driver_mode"
            android:paddingHorizontal="20dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/select_loader_mode"
            android:layout_width="wrap_content"
            android:background="@drawable/button_background"
            android:text="@string/loader_mode"
            android:paddingHorizontal="20dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">
    <RelativeLayout
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <EditText
            android:id="@+id/user_password"
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_border"
            android:ems="10"
            android:hint="@string/enter_password_hint"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:paddingVertical="10dp"
            android:paddingStart="15dp"
            android:textColor="@color/text_gray"
            android:textColorHint="@color/text_light_gray"
            android:textSize="18dp"/>
        <ImageView
            android:id="@+id/visible_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="11dp"
            app:srcCompat="@drawable/visibility_on"/>
        <ImageView
            android:id="@+id/visible_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="11dp"
            app:srcCompat="@drawable/visibility_off"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/login_page_enter_button"
            android:layout_width="wrap_content"
            android:background="@drawable/button_background"
            android:text="@string/enter"
            android:paddingHorizontal="40dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/login_page_enter_button_loader"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:elevation="2dp"
            app:srcCompat="@drawable/preloader" />
    </RelativeLayout>
    <TextView
        android:id="@+id/error_field"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:textColor="@color/text_red"
        android:textSize="16dp"/>
    <TextView
        android:id="@+id/get_password_by_sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_url_blue"
        android:text="@string/get_password_by_sms"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:textSize="18dp"/>
</LinearLayout>